{% extends 'partials/main.html.twig' %}

{% block stylesheets %}

{{ parent() }}

<!-- jsvectormap css -->
<link href="{{ asset('libs/jsvectormap/css/jsvectormap.min.css') }}" rel="stylesheet" type="text/css" />

<!--Swiper slider css-->
<link href="{{ asset('libs/swiper/swiper-bundle.min.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block content %}

<div class="container-fluid">

    <div class="row">
        <div class="col">
            <div class="h-100">
                <div class="row mb-3 pb-1">
                    <div class="col-12">
                        <div class="d-flex align-items-lg-center flex-lg-row flex-column">
                            <div class="flex-grow-1">
                                <h4 class="fs-16 mb-1">Home</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-column h-100">
                            <div class="row">
                                <div class="col-4">
                                    <a href="{{ path('app_addresses_index') }}">
                                        <div class="card card-animate" style="height: 250px;">
                                            <div class="card-body">
                                                <div class="text-center">
                                                    <div>
                                                        <p
                                                            class="text-uppercase fw-medium text-muted text-truncate mb-0 mt-2">
                                                            Addresses
                                                        </p>
                                                        <p class="mt-2 text-muted">
                                                            The Address/Standardization verify, which corrects errors in
                                                            street addresses, including abbreviations and missing
                                                            information, and supplies ZIP Codes and ZIP Codes + 4.
                                                        </p>
                                                    </div>
                                                    <div class="mt-4">
                                                        <span class="fs-2">
                                                            <i class="ri-road-map-line"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div><!-- end card body -->
                                        </div> <!-- end card-->
                                    </a>
                                </div> <!-- end col-->
                                <div class="col-4">
                                    <a href="{{ path('app_domestic_prices_index') }}">
                                        <div class="card card-animate" style="height: 250px;">
                                            <div class="card-body">
                                                <div class="text-center">
                                                    <div>
                                                        <p
                                                            class="text-uppercase fw-medium text-muted text-truncate mb-0 mt-2">
                                                            Domestic Prices
                                                        </p>
                                                        <p class="mt-2 text-muted">
                                                            This provides Domestic USPS product pricing based on the
                                                            characteristics of what is being shipped for Parcel Select,
                                                            Parcel Select Lightweight, Priority Mail, Priority Mail
                                                            Express,
                                                            First Class Package Services, Library Mail, Media Mail, and
                                                            Bound Printed Matter.
                                                        </p>
                                                    </div>
                                                    <div class="mt-4">
                                                        <span class="fs-2">
                                                            <i class="ri-money-dollar-circle-line"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div><!-- end card body -->
                                        </div> <!-- end card-->
                                    </a>
                                </div> <!-- end col-->
                                <div class="col-4">
                                    <a href="{{ path('app_tracking_index') }}">
                                        <div class="card card-animate" style="height: 250px;">
                                            <div class="card-body">
                                                <div class="text-center">
                                                    <div>
                                                        <p
                                                            class="text-uppercase fw-medium text-muted text-truncate mb-0 mt-2">
                                                            Tracking
                                                        </p>
                                                        <p class="mt-2 text-muted">
                                                            This returns tracking status and related details for a given
                                                            USPS package, including scan events and their date, time,
                                                            and
                                                            location.
                                                        </p>
                                                    </div>
                                                    <div class="mt-4">
                                                        <span class="fs-2">
                                                            <i class="ri-truck-line"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div><!-- end card body -->
                                        </div> <!-- end card-->
                                    </a>
                                </div> <!-- end col-->
                            </div> <!-- end row-->
                        </div>
                    </div>
                </div>
            </div> <!-- end .h-100-->
        </div> <!-- end col -->
    </div>

</div>

{% endblock %}

{% block javascripts %}

{{ parent() }}

<!-- apexcharts -->
<script src="{{ asset('libs/apexcharts/apexcharts.min.js') }}"></script>

<!-- Dashboard init -->
<script src="{{ asset('js/pages/dashboard-crm.init.js') }}"></script>


{% endblock %}